<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_primary_dark"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_dialer_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/material_on_surface_emphasis_medium">

        <TextView
            android:id="@+id/main_dialer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@color/white"
            tools:text="918639645"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_dialer_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:showDividers="middle"
        android:divider="@drawable/grid_divider">

        <LinearLayout
            android:id="@+id/main_dialer_grid_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/main_dialer_grid_button_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="1"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="2"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="3"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_dialer_grid_button_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="4"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="5"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_dialer_grid_button_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="7"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="8"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_dialer_grid_button_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="*/+"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="0"/>

            <TextView
                android:id="@+id/main_dialer_grid_button_hashtag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/click_change"
                android:text="#"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_dialer_add_person"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_change"
                android:src="@drawable/add_person"/>

            <ImageView
                android:id="@+id/main_dialer_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_change"
                android:src="@drawable/phone"/>

            <ImageView
                android:id="@+id/main_dialer_backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_change"
                android:src="@drawable/backspace"/>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>